<% if params[:position].present? %>
  <%= turbo_stream.replace :dragged_item, partial: "chapters/edit", locals: { chapter: @chapter } %>
<% else %>
  <%= turbo_stream.append :chapters, partial: "chapters/edit", locals: { chapter: @chapter } %>
<% end %>

<%= turbo_stream.scroll_into_view @chapter, animation: :wiggle %>

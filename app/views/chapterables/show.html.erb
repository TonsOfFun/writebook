<% content_for(:title) { page_title(@chapter, @report) } %>

<% content_for :header do %>
  <%= render "chapters/header", report: @report, chapter: @chapter %>
<% end %>

<% content_for :sidebar do %>
  <%= render "chapters/sidebar", report: @report %>
<% end %>

<% if @chapter.section? %>
  <div class="page--section <%= "theme--dark" if @chapter.chapterable.theme == "dark" %>">
    <h1><%= highlight_searched_content @chapter, simple_format(@chapter.section.body), params[:search] %></h1>
  </div>
<% elsif @chapter.page? %>
  <div class="page--page" data-controller="scroll-to-highlight">
    <%= highlight_searched_content @chapter, sanitize_content(@chapter.page.body.to_html), params[:search] %>
  </div>
<% elsif @chapter.picture? %>
  <figure class="page--picture flex flex-column align-center gap margin-none">
    <% if @chapter.picture.image.attached? %>
      <%= link_to rails_blob_path(@chapter.picture.image), data: {
            action: "lightbox#open:prevent",
            lightbox_target: "image",
            lightbox_url_value: rails_blob_path(@chapter.picture.image, disposition: "attachment", only_path: true) } do %>
        <%= image_tag @chapter.picture.image.variant(:large), loading: "lazy" %>
      <% end %>
    <% else %>
      <%= image_tag "default-picture.webp", alt: "No image uploaded", loading: "lazy" %>
    <% end %>

    <figcaption>
      <%= simple_format @chapter.picture.caption %>
    </figcaption>
  </figure>
<% elsif @chapter.document? %>
  <div class="page--document" data-controller="pdf-viewer" data-pdf-viewer-url-value="<%= @chapter.document.file.attached? ? rails_blob_path(@chapter.document.file) : '' %>">
    <% if @chapter.document.file.attached? %>
      <div class="document-viewer">
        <div class="document-toolbar flex align-center justify-between pad gap">
          <div class="document-info">
            <span class="document-filename"><%= @chapter.document.file.filename %></span>
            <% if @chapter.document.completed? %>
              <span class="txt-muted txt-small">(<%= @chapter.document.page_count %> pages)</span>
            <% end %>
          </div>
          <div class="document-actions flex gap-half">
            <%= link_to rails_blob_path(@chapter.document.file, disposition: "attachment"), class: "btn btn--small" do %>
              Download
            <% end %>
          </div>
        </div>

        <% if @chapter.document.pdf? %>
          <div class="pdf-container" data-pdf-viewer-target="container">
            <canvas data-pdf-viewer-target="canvas"></canvas>
          </div>
          <div class="pdf-navigation flex align-center justify-center gap pad">
            <button class="btn btn--small" data-action="pdf-viewer#previousPage" data-pdf-viewer-target="prevBtn">Previous</button>
            <span data-pdf-viewer-target="pageInfo">Page 1 of 1</span>
            <button class="btn btn--small" data-action="pdf-viewer#nextPage" data-pdf-viewer-target="nextBtn">Next</button>
          </div>
        <% else %>
          <div class="document-preview pad-double txt-center">
            <p class="txt-muted">Preview not available for this document type.</p>
            <p class="txt-small txt-muted">Download the file to view it.</p>
          </div>
        <% end %>

        <% if @chapter.document.completed? && @chapter.document.searchable_content.present? %>
          <details class="document-text-content margin-block">
            <summary class="pad cursor-pointer">View extracted text</summary>
            <div class="pad border-block-start">
              <%= simple_format @chapter.document.searchable_content.truncate(5000) %>
            </div>
          </details>
        <% elsif @chapter.document.processing? || @chapter.document.pending? %>
          <div class="document-processing pad txt-center">
            <p class="txt-muted">Text extraction in progress...</p>
          </div>
        <% elsif @chapter.document.failed? %>
          <div class="document-error pad txt-center">
            <p class="txt-error">Text extraction failed: <%= @chapter.document.processing_error %></p>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="document-empty pad-double txt-center">
        <p class="txt-muted">No document uploaded</p>
      </div>
    <% end %>
  </div>
<% end %>

<% content_for :footer do %>
  <%= render "chapters/navigation", chapter: @chapter %>
<% end %>
